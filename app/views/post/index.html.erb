<%= render "navbar" %>
<div class="container">
   <a href="/post/new">
    <button type="button" class="btn btn-secondary">글쓰기</button><hr>
   </a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">제목</th>
          <th scope="col">작성자</th>
          <th scope="col">작성시간</th>
        </tr>
      </thead>
      
      <tbody>
        <% @post.each do |p| %>
         <tr>
          <th scope="row"><%=p.id%></th>
          <td><a href="/post/show/<%=p.id%>"><%=p.title%></a></td>
          <td><%=p.user.username%></td>
          <td><%=p.created_at.to_s.split("+").first%></td>
         </tr>
        <% end %>
      </tbody>
    </table>
    
</div>